{% extends 'base.html.twig' %}

{% block title %}Nous contacter - SurfShop 40/64{% endblock %}

{% block content %}
<div id="container">
    <div class="col-sm-10 col-sm offset-1">
        {% for message in app.flashes('notice') %}
        <div class="alert alert-info">{{ message }}</div>
        {% endfor %}
        <h2>Nous contacter</h2>
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row align-items-end">
                    <div class="col">
                        {{ form_row(form.prenom) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.nom) }}
                    </div>

                    <div class="col">
                        {{ form_row(form.email) }}
                    </div>
                </div>
                <div class="row align-items-end">
                    <div class="col">
                        {{ form_row(form.description) }}
                    </div>
                </div>
                {{ form_row(form.submit) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
